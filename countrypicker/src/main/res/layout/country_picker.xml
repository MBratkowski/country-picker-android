<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dialog_country_picker_padding_horizontal"
    android:paddingRight="@dimen/dialog_country_picker_padding_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_country_picker_text_view_information_margin_top"
        android:gravity="center"
        android:text="Tell us which country you live in"
        android:textColor="#a299a6"
        android:textSize="@dimen/dialog_country_picker_text_view_information_text_size" />

    <EditText
        android:id="@+id/country_code_picker_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_country_picker_edit_text_height"
        android:layout_margin="@dimen/dialog_country_picker_edit_text_margin"
        android:background="@drawable/bg_edit_text"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:paddingLeft="@dimen/dialog_country_picker_edit_text_padding_horizontal"
        android:paddingRight="@dimen/dialog_country_picker_edit_text_padding_horizontal" />

    <ListView
        android:id="@+id/country_code_picker_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dialog_country_picker_list_view_margin_bottom"
        android:layout_marginLeft="@dimen/dialog_country_picker_list_view_margin_horizontal"
        android:layout_marginRight="@dimen/dialog_country_picker_list_view_margin_horizontal"
        android:layout_weight="1"
        android:divider="#eae7eb"
        android:dividerHeight="@dimen/dialog_country_picker_list_view_divider_height" />

</LinearLayout>
